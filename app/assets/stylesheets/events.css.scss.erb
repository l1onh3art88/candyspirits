body{
  overflow-x:hidden;
}

#events{
background-image: url(<%= asset_data_uri "News_Events_Gallery-background-img-compressor.png" %>);
  background-size:110%;
  background-repeat:no-repeat;
  background-position: -8em 40%;
  height:30em;
}
#eventstab{
  background-color:white;
  width:43em;
  margin:auto;
  margin-left:35%;
}
#eventsnewspage, #eventsgallerypage{
  padding-left:2em;
  padding-right:2em;
  overflow-y:scroll;
  height:27em;
}

#eventsnewspage p{
  line-height:1;
}
#eventsnews{
  width: 50%;
  padding: 0px;
  border: 0px;
  height: 3em;
  position: relative;
}

#eventsgallery{
  width: 21em;
  padding: 0px;
  border: 0px;
  height: 3em;
  position: relative;
}
.selected{
  background-color: rgba(249, 28, 133, 1);
}
#eventsgallerypage{
  display:none;
}
#eventsgallerypage p{
    font-size: 12px;
    margin-top: -1em;
    margin-bottom: 0;
    line-height: 12px;
}
#galleryimage{
  width:70%;
  height:80%;
  margin-left:5em;
}

/* Iphone 5 and 5s ---------------------------------------------------------------------*/

@media only screen 
  and (min-device-width: 320px) 
  and (max-device-width: 568px)
  and (-webkit-min-device-pixel-ratio: 2) {
  #events{
    height: 38em;
    background: none;

  }
  #eventstab{
    width:100%;
    height: 100%;
    background-color: white;
    margin-left: 0px;
  }
  #eventsnews, #eventsgallery{
    position: initial;
    width: 100%;
  }
  #eventsnewspage{
  height: 30em;
  }
  #eventsgallerypage{
    padding-left: 2em;
    padding-right: 2em;
    height: 100%;
  }
  #galleryimage{
    width: 100%;
    height: 50%;
    margin-top: .5em;
    margin-left: 0px;
  }
}
/* iPhone 6 */
@media only screen 
  and (min-device-width: 375px) 
  and (max-device-width: 667px) 
  and (-webkit-min-device-pixel-ratio: 2) {
  #eventstab{
    margin-top: 3em;
  }
}