body{
  overflow-x:hidden;
}

#events{
background-image: url(<%= asset_data_uri "News_Events_Gallery-background-img-compressor.png" %>);
  background-size:110%;
  background-repeat:no-repeat;
  background-position: -8em 40%;
  height:30em;
}
#eventstab{
  background-color:white;
  width:43em;
  margin:auto;
  margin-left:35%;
}
#eventsnewspage, #eventsgallerypage{
  padding-left:2em;
  padding-right:2em;
  overflow-y:scroll;
  height:27em;
}

#eventsnewspage p{
  line-height:1;
}
#eventsnews{
  width: 50%;
  padding: 0px;
  border: 0px;
  height: 3em;
  position: relative;
}

#eventsgallery{
  width: 21em;
  padding: 0px;
  border: 0px;
  height: 3em;
}
.selected{
  background-color: rgba(249, 28, 133, 1);
}
#eventsgallerypage{
  display:none;
}
#eventsgallerypage p{
    font-size: 12px;
    margin-top: -1em;
    margin-bottom: 0;
    line-height: 12px;
}
#galleryimage{
  width:70%;
  height:80%;
  margin-left:5em;
}