//background-------------------------------------------------------------------------

#home{
background-image: url(<%=asset_data_uri'backgroundimgmerged-compressor.png' %>);
  background-size: cover;
  background-position-y: -12em;
  background-repeat: no-repeat;
  height:30em;

}

nav.navbar.navbar-default{
  margin-bottom: 0px;
}
.container-fluid{
  padding-right: 0px;
  padding-left:0px;
}
#hometext{
  max-width:50em;
  margin: auto;
  text-align: center;
  padding-top: 8em;
  padding-right:10em;
}
#hometext h1{
  font-size:150px;
  margin:0;
  font-family: "roboto",sans-serif;
  color: #EE4F92;
  font-weight: 100;
  margin-bottom:-30px;
}
#hometext h2{
  margin:0;
  color: #EE4F92;
}
#hometext h3{
  display: inline-block;
  margin:0;
}

#lemonH{
  color: #FBEC47;
}
#honeyH{
  color: orange;
}
#hometext h4{
  margin:0;
  color: #EE4F92;
}
#hometext p{
  color:#EE4F92;
}
//Footer-------------------------------------------------------------------
.footer{
  height:64.5px;
  background: -webkit-linear-gradient(left, rgb(250,200,61),rgb(230,42,21),rgb(230, 32, 126)); 
}
.footer img{
/*   padding-left:1em; */
  padding-right:.5em;
}
.footer p{
  margin-left:2em;
}
#footerp2{
  text-indent: 12em;
  margin-bottom:1.5em
/*   font-size: 13px; */
}
#footerp1{
  display: inline-block;
/*   font-size: 13px; */
  padding-left: 4em;
  margin-bottom: 0px;
  margin-top:1.5em;
}
#footerp1, #footerp2{
  font-size:13px;
  color:white;
  line-height: 70%;
}
#socialmedia{
  display: inline-block;
  position: relative;
  top: .8em;
}
#facebooklogo{
  padding-left: 2em;
}
// Ghost Box----------------------------------------------------------------------------------
#signup{
  display: inline-block;
  width: 200px;
  padding: 8px;
  color: #e6207e;
  border: 1px solid #e6207e;
  text-align: center;
  outline: none;
  text-decoration: none;
  background-color: rgba(255, 255, 255, 0);
  z-index: 1000;
  transition-property: color, background-color;
  transition-duration: .4s;
  font-family: 'Roboto', sans-serif;
}
#signup:hover,
#signup:active {
  background-color: #e6207e;
  color: #fff;
}
//Bottle Image-----------------------------------------------------
#bottles{
  width: 19%;
  height: 400px;
  margin-top: -31em;
  margin-left:67em;
}
/* Desktop Overlay */
#overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    filter:alpha(opacity=50);
    -moz-opacity:0.5;
    -khtml-opacity: 0.5;
    opacity: 0.5;
    z-index: 500;
    display:none;
}
