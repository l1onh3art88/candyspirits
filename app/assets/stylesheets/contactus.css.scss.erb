// Place all the styles related to the contactus controller here.
// They will automatically be included in application.css.
// You can use Sass (SCSS) here: http://sass-lang.com/
#contactusid{
  height:30em;
}
#contactus{
  width: 70em;
  height: 14em;
  position: relative;
  text-align: left;
  top: 12em;
  left:8em;
  border-radius: 10px;
  box-shadow: 0px 10px 50px;
  background-color:grey;
}
// Contact Form---------------------------------------------------------
#contactus input, select, textarea{
color: black;
}
#contacth{
  width: 270px;
  margin-left: .5em;
  font-size: 3em;
  position:relative;
  bottom: .5em;
  font-family: 'Raleway',sans-serif;
  font-weight: 300;
}
#contactp{
  width:250px;
  margin-left:1em;
  margin-bottom: -1em;
  position:relative;
  bottom: 2em;
  font-family: 'Roboto', sans-serif;
}
#contacth, #contactp{
  color:#e6207e;
}
#contactsig{
  display: inline-block;
  width: 6em;
  margin-right: 10em;
  position: relative;
  bottom: 6.7em;
  left: 5.5em;
}
#contactbot{
  position: relative;
  bottom: 11em;
  width: 10em;
  height:13em;
  left:3em;
}

#contactus form{
  display: inline-block;
  width: 30em;
  position: relative;
  bottom: 12em;
  left:3em;
  line-height:.5;
  margin-right:9em;
}
//Background----------------------------------------
#contactusbackground{
  overflow-y:hidden;
background-image: url(<%=asset_data_uri 'Contact-Us-Background-Img-compressor.png'%>);
  background-size: 70em;
  background-position: 40% 10%;
  background-repeat: no-repeat;
}

/* iPhone 5 and 5s Contact us page */

@media only screen 
  and (min-device-width: 320px) 
  and (max-device-width: 568px)
  and (-webkit-min-device-pixel-ratio: 2)
  and (orientation: portrait) {
  #contactus{
    width: 100%;
    height: 390px;
    position: initial;
  }
  #contacth, #contactp, #contactus form, #contactsig{
    position: initial;
  }
  #contactsig{
    width: 30%;
    margin-left: 5em;
  }
  #contactus form{
    padding-left: 1em;
    padding-right: 1em;
    padding-top: 1em;
    width: 100%;
  }
  #contactbot{
    display: none;
  }
}
/* ----------- iPad 1 and 2 ----------- */
/* Portrait and Landscape */
@media only screen 
  and (min-device-width: 768px) 
  and (max-device-width: 1024px) 
  and (-webkit-min-device-pixel-ratio: 1) {
  #contactusid{
    height: 40em;
    overflow-x:hidden;
  }
  #contactus{
    position: initial;
    margin-top: 20em;
    margin-left: 1.5em;
    padding-top: 1em;
    height: 18em;
  }
  #contacth{
    position: initial;
  }
  #contactp{
    position: initial;
  }
  #contactsig{
    bottom:5em;
  }
  #contactus form{
    bottom: 10em;
    left: 3em;
    margin-right: 9em;
  }
  #contactbot{
    bottom: 9em;
    width: 12em;
    height: 15em;
  }
}